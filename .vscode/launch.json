{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Unity Editor",
            "type": "unity",
            "request": "launch",
            "workspaceFolder": "${workspaceFolder}",
            "projectName": "monochromatic-snake",
            "solutionPath": "monochromatic-snake.sln",
            "debuggerPort": 56000,
            "editorPath": "/Applications/Unity/Hub/Editor/2019.4.11f1/Unity.app/Contents/MacOS/Unity",
            "editorArgs": [
                "-projectPath",
                "${workspaceFolder}"
            ],
            "breakOnUnhandledExceptions": true,
            "sourcePaths": [
                "${workspaceFolder}/Assets/Scripts"
            ],
            "useCodeDebugging": true
        }
    ]
}